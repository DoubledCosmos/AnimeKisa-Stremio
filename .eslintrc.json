{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": [
      "warn",
      4
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "space-before-function-paren": [
      "warn",
      "never"
    ],
    "keyword-spacing": [
      "warn",
      {
        "after": false,
        "overrides": {
          "else": {
            "after": true
          },
          "return": {
            "after": true
          },
          "const": {
            "after": true
          },
          "try": {
            "after": true
          },
          "catch": {
            "after": true
          },
          "finally": {
            "after": true
          },
          "import": {
            "after": true
          },
          "from": {
            "after": true
          }
        }
      }
    ]
  }
}
